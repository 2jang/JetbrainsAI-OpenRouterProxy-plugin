<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.zxcizc.OllamaOpenRouterProxy-jetbrains-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Ollama OpenRouter Proxy</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor>zxcizc</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Redirects requests from local Ollama-compatible endpoints to OpenRouter.ai.<br>
    Configure your OpenRouter API key in the settings and point your AI tools to the proxy address.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.PluginSettingsConfigurable"
                id="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.PluginSettingsConfigurable"
                displayName="Ollama OpenRouter Proxy"/>

        <applicationService
                serviceImplementation="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.PluginSettingsState"/>
        <postStartupActivity implementation="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.PluginStartupActivity"/>
        <notificationGroup id="OllamaOpenRouterProxy"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
        <toolWindow
                id="Ollama Proxy Control"
                anchor="right"
                icon="AllIcons.General.Filter"
                factoryClass="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.ProxyControlToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="OllamaProxy.ToggleProxy"
                class="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.ToggleProxyAction"
                text="Toggle Ollama Proxy"
                description="Toggle OpenRouter proxy on/off">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        
        <action id="OllamaProxy.OpenSettings"
                class="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.OpenSettingsAction"
                text="Ollama Proxy Settings..."
                description="Open Ollama OpenRouter Proxy settings">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        
        <action id="OllamaProxy.ShowInformation"
                class="com.zxcizc.ollamaopenrouterproxyjetbrainsplugin.ShowInformationAction"
                text="Ollama Proxy Information..."
                description="Show Ollama OpenRouter Proxy information and status">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
